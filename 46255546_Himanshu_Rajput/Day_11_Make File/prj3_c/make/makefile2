INC_DIR := ../inc
SRC_DIR := ../src
OBJ_DIR := ../obj
BIN_DIR := ../bin

EXE := $(BIN_DIR)/app.exe
SRC := $(wildcard $(SRC_DIR)/*.c)
OBJ := $(SRC:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

CIFLAGS := -I $(INC_DIR)
CFLAGS = -Wall -c -g
LDFLAGS = -Llib
LDLIBS := -lm

all = $(EXE)

$(EXE) : $(OBJ) | $(BIN_DIR)
        $(CC) $(LDFLAGS) $^ $(LDLIBS) -o $@

$(OBJ_DIR)/%.o : $(SRC_DIR)/%.c | $(OBJ_DIR)
        $(CC) $(CIFLAGS) $(CFLAGS) $< -o $@

$(BIN_DIR) $(OBJ_DIR):
        mkdir -p $@

clean:
        @$(RM) -rv $(BIN_DIR) $(OBJ_DIR)
